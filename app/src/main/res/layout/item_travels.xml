<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <ImageView
        android:id="@+id/idIVtravelCover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/idTVtravelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="여행이름"
        app:layout_constraintStart_toEndOf="@+id/idIVtravelCover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTVtraveldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:text="여행기간"
        app:layout_constraintBottom_toTopOf="@+id/idIVtravelFlag"
        app:layout_constraintStart_toEndOf="@+id/idIVtravelCover"
        app:layout_constraintTop_toBottomOf="@+id/idTVtravelName" />

    <TextView
        android:id="@+id/idTVtravelTotalSpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="54dp"
        android:text="₩1,000,000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idIVtravelFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idIVtravelCover"
        app:srcCompat="@android:drawable/editbox_dropdown_dark_frame"
        android:contentDescription="@string/travel_cover_image" />
</androidx.constraintlayout.widget.ConstraintLayout>